<div class="card mb-5 br-lg">

  <div class="card-body">
    <div class="row">
      {{#each model as |ad|}}
      <div class="col-md">
        <div class="card w-50 mb-5">
          <img class=" card-img-top" src={{ad.pic}} alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title">{{ad.title}}</h5>
            <p class="card-text">{{{ad.content}}}</p>
            {{#link-to "blog.post" ad.slug }}Read More{{/link-to}}
           
          </div>
          <div class="card-footer">
               <p class="card-text">Published: {{{ad.date}}}</p>
            

          </div>

        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>

{{outlet}}